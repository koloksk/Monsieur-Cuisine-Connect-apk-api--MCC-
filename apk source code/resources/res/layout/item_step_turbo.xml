<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_interface_background_big_px"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:translationY="32dp"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:layout_alignParentTop="true">
            <include
                android:id="@+id/knob_left_turbo"
                android:layout_width="wrap_content"
                android:layout_height="600dp"
                android:layout_alignParentTop="true"
                layout="@layout/knob_layout_time"/>
            <view.QuicksandTextView
                android:textSize="@dimen/text_step_large"
                android:textColor="@color/text_primary"
                android:id="@+id/item_step_turbo_text"
                android:paddingBottom="82dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="120dp"
                android:layout_toEndOf="@+id/knob_left_turbo"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/turbo_iv"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:layout_marginStart="170dp"
            app:srcCompat="@drawable/button_turbo_enabled"/>
    </RelativeLayout>
    <include
        android:id="@+id/step_number_rl"
        android:visibility="gone"
        layout="@layout/step_number_layout"/>
    <include
        android:id="@+id/step_recipe_names"
        layout="@layout/step_names_layout"/>
</RelativeLayout>
