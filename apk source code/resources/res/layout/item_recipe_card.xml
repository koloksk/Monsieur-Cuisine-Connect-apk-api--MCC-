<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/recipe_card_width"
    android:layout_height="@dimen/recipe_card_height"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    card_view:cardCornerRadius="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/recipe_card_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/recipe_card_shadow"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <ImageView
            android:id="@+id/recipe_card_new_mark"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/recipe_category_new_corner"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
        <view.QuicksandTextView
            android:textSize="@dimen/text_large_middle"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center_horizontal"
            android:id="@+id/recipe_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="0.85"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
        <view.QuicksandTextView
            android:textSize="@dimen/text_smallest"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:id="@+id/recipe_card_servings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/servings"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/recipe_card_servings_logo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/asset_portionen"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_above="@+id/recipe_card_servings_label"
            android:layout_centerHorizontal="true"/>
        <view.QuicksandTextView
            android:textSize="@dimen/text_small"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:id="@+id/recipe_card_servings"
            android:paddingBottom="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/recipe_card_servings_logo"
            android:layout_alignBottom="@+id/recipe_card_servings_logo"
            android:layout_centerHorizontal="true"/>
        <view.QuicksandTextView
            android:textSize="@dimen/text_smallest"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:id="@+id/recipe_card_minutes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/minutes"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="21dp"/>
        <ImageView
            android:id="@+id/recipe_card_minutes_logo"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:src="@drawable/asset_minuten"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_above="@+id/recipe_card_minutes_label"
            android:layout_marginStart="32dp"/>
        <view.QuicksandTextView
            android:textSize="@dimen/text_small"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:id="@+id/recipe_card_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="3"
            android:minEms="2"
            android:layout_alignTop="@+id/recipe_card_minutes_logo"
            android:layout_alignBottom="@+id/recipe_card_minutes_logo"
            android:layout_alignStart="@+id/recipe_card_minutes_logo"
            android:layout_alignEnd="@+id/recipe_card_minutes_logo"/>
        <view.QuicksandTextView
            android:textSize="@dimen/text_smallest"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center_horizontal"
            android:layout_gravity="end|bottom"
            android:id="@+id/recipe_card_level_label"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/level"
            android:layout_alignParentBottom="true"
            android:textAllCaps="true"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/recipe_card_level_logo"
            android:layout_width="28dp"
            android:layout_height="29dp"
            android:src="@drawable/asset_einfach"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_above="@+id/recipe_card_level_label"
            android:layout_marginEnd="32dp"
            android:layout_alignParentEnd="true"/>
        <view.QuicksandTextView
            android:textSize="@dimen/text_small"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:id="@+id/recipe_card_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/recipe_card_level_logo"
            android:layout_alignBottom="@+id/recipe_card_level_logo"
            android:layout_marginEnd="5dp"
            android:layout_alignStart="@+id/recipe_card_level_logo"
            android:layout_alignEnd="@+id/recipe_card_level_logo"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
