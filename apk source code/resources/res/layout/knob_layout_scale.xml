<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/knob_container_rl"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/knob_bg_iv"
        android:layout_width="wrap_content"
        android:layout_height="480dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        app:srcCompat="@drawable/main_interface_knob_shadow_v2"/>
    <view.knob.KnobScale
        android:id="@+id/knob"
        android:padding="16dp"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginTop="105dp"
        android:alpha="0.5"
        android:layout_marginStart="70dp"
        app:arcColor="@color/divider"
        app:arcWidth="12dp"
        app:progressColor="@color/accent_dark"
        app:progressWidth="12dp"
        app:rotation="180"
        app:startAngle="35"
        app:sweepAngle="292"
        app:targetProgressColor="@color/accent_dark_transparent"
        app:touchInside="false"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/knob_top_container_rl"
        android:layout_width="250dp"
        android:layout_height="210dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="80dp">
        <include
            android:id="@+id/top_layout"
            layout="@layout/top_dial_layout"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/knob_mode_iv"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/scale_active_icon"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:layout_marginStart="1dp"/>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/tara_button"
            android:clickable="true"
            android:layout_width="110dp"
            android:layout_height="48dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:src="@drawable/button_tare"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:cropToPadding="false"/>
            <view.QuicksandTextView
                android:textSize="@dimen/text_large"
                android:textColor="@color/divider"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/tare"/>
        </RelativeLayout>
    </LinearLayout>
    <include
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="286dp"
        android:layout_marginStart="146dp"
        layout="@layout/bottom_dial_layout"/>
</RelativeLayout>
