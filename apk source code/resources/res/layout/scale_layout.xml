<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_interface_background_big_px"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1">
    <FrameLayout
        android:id="@+id/knob_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <include
            android:id="@+id/knob_scale_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="45dp"
            layout="@layout/knob_layout_scale"/>
    </FrameLayout>
    <ImageView
        android:id="@+id/scale_confirm_iv"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/scale_confirm_button"/>
</RelativeLayout>
