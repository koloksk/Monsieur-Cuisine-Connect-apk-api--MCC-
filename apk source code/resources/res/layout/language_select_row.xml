<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/language_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="36dp">
    <RelativeLayout
        android:id="@+id/left_row"
        style="@style/settings_left_row">
        <ImageView
            android:src="@drawable/asset_007_terms"
            style="@style/settings_left_icon"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/middle_row"
        style="@style/settings_middle_row">
        <view.QuicksandTextView
            android:id="@+id/what_tv"
            android:text="@string/language"
            style="@style/settings_middle_row_tv"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/right_row"
        android:layout_height="50dp"
        style="@style/settings_right_row">
        <view.QuicksandTextView
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/language_select_row_what_tv"
            android:background="@drawable/selector_terms_select"
            android:clickable="true"
            android:layout_width="match_parent"
            android:text="@string/change_language"
            android:minEms="18"
            style="@style/settings_right_row_tv"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/language_select_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/right_row"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="55dp"
        style="@style/settings_full_container_row">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/asset_017_shadow_small"
            android:layout_alignParentTop="true"/>
        <Spinner
            android:textSize="@dimen/text_middle"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/language_select_row_spinner"
            android:background="@drawable/shape_settings_rectangle_rounded_bottom"
            android:padding="16dp"
            style="@style/settings_html_row_tv"/>
    </RelativeLayout>
</RelativeLayout>
