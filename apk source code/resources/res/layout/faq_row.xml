<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/faq_root_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">
    <RelativeLayout
        android:id="@+id/left_row"
        style="@style/settings_left_row">
        <ImageView
            android:src="@drawable/asset_006_faq"
            style="@style/settings_left_icon"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/middle_row"
        style="@style/settings_middle_row">
        <view.QuicksandTextView
            android:id="@+id/what_tv"
            android:text="@string/faq"
            style="@style/settings_middle_row_tv"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/right_row"
        android:layout_height="50dp"
        android:weightSum="7"
        style="@style/settings_right_row">
        <view.QuicksandTextView
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/faq_row_what_tv"
            android:background="@drawable/selector_terms_select"
            android:clickable="true"
            android:layout_width="0dp"
            android:text="@string/frequently_asked_questions"
            android:minEms="18"
            android:layout_weight="5"
            style="@style/settings_right_row_tv"/>
        <view.QuicksandTextView
            android:textSize="@dimen/text_small_middle"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/faq_row_open"
            android:background="@drawable/shape_settings_rectangle_rounded_right_top"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="@string/open"
            android:layout_weight="2"
            android:textAllCaps="true"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            style="@style/settings_right_row_tv"/>
    </LinearLayout>
    <view.QuicksandTextView
        android:textSize="@dimen/text_small_middle"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@+id/faq_row_back"
        android:background="@drawable/shape_settings_rectangle_rounded_right_top"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/close"
        android:textAllCaps="true"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginEnd="22dp"
        style="@style/settings_right_row"/>
    <RelativeLayout
        android:id="@+id/faq_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/left_row"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        style="@style/settings_full_container_row">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/asset_017_shadow_small"
            android:layout_alignParentTop="true"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/faq_row_content_container_rl"
            android:background="@drawable/shape_settings_rectangle_rounded_bottom"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:layout_marginBottom="16dp"
            style="@style/settings_right_row">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/faq_row_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
