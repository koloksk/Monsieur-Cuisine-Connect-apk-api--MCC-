<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main_interface_background_big_px"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <view.StaticScrollView
        android:id="@+id/item_step_scale_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="-28dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/knob_frame"
                android:layout_width="409dp"
                android:layout_height="wrap_content">
                <include
                    android:id="@+id/knob_scale_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="42dp"
                    layout="@layout/knob_layout_scale"/>
            </FrameLayout>
            <view.QuicksandTextView
                android:textSize="@dimen/text_step_large"
                android:textColor="@color/text_primary"
                android:id="@+id/item_step_name_tv"
                android:paddingBottom="82dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="120dp"
                android:layout_toEndOf="@+id/knob_frame"/>
        </RelativeLayout>
    </view.StaticScrollView>
    <include
        android:id="@+id/step_number_rl"
        android:visibility="gone"
        layout="@layout/step_number_layout"/>
    <include
        android:id="@+id/step_recipe_names"
        layout="@layout/step_names_layout"/>
</RelativeLayout>
