<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/info_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp">
    <view.QuicksandTextView
        android:textSize="@dimen/font_x_large"
        android:gravity="center_horizontal"
        android:id="@+id/language_select_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Please select a language"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/language_select_header"
        android:layout_centerHorizontal="true"
        style="@style/settings_right_row">
        <ListView
            android:id="@+id/language_select_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="30dp"/>
    </LinearLayout>
</RelativeLayout>
