<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main_interface_background_big_px"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <view.QuicksandTextView
        android:textSize="@dimen/text_step_large"
        android:textColor="@color/text_primary"
        android:id="@+id/item_step_instruction_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"/>
    <include
        android:id="@+id/step_number_rl"
        android:visibility="gone"
        layout="@layout/step_number_layout"/>
    <include
        android:id="@+id/step_recipe_names"
        layout="@layout/step_names_layout"/>
</RelativeLayout>
